<Window x:Class="Koytz_RiotID_changer_v2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Koytz_RiotID_changer_v2"
        mc:Ignorable="d"
        Title="MainWindow" Height="290" Width="933">

    <Grid
        
        Margin="0,-10,0,-6">

        <Rectangle 
            HorizontalAlignment="Left" 
            Height="275" 
            Margin="404,10,0,0" 
            Stroke="#292727"
            Fill="#292727" 
            VerticalAlignment="Top" 
            Width="540"
        />

        <Rectangle 
            Width="405" 
            VerticalAlignment="Top" 
            Stroke="#211e1f" 
            Height="276" 
            HorizontalAlignment="Left" 
            Fill="#211e1f" 
            Margin="0,9,0,0"
        />

        <TextBlock
            FontFamily="Mark Pro"
            FontSize="27"
            FontWeight="Bold"
            HorizontalAlignment="Left" 
            Margin="53,40,0,0" 
            TextWrapping="Wrap" 
            Text="Riot ID" 
            Foreground="white"
            VerticalAlignment="Top"
        />

        <TextBlock
            FontFamily="Mark Pro"
            FontWeight="Medium"
            FontSize="12"
            
            HorizontalAlignment="Left" 
            Height="40" 
            Margin="54,95,0,0" 
            TextWrapping="Wrap" 
            Text="Seu Riot ID é usado pelos jogadores para encontrar você no painel social de jogos da Riot."
            Foreground="#b0b0b0"
            VerticalAlignment="Top" 
            Width="301"
        />

        <TextBlock
            FontFamily="Mark Pro"
            FontSize="9"
            FontWeight="Bold"
            HorizontalAlignment="Left" 
            Height="14" 
            Margin="98,226,0,0" 
            TextWrapping="Wrap" 
            Text="RIOT ID PODE SER ALTERADO A CADA 90 DIAS"
            Foreground="white"
            VerticalAlignment="Top" 
            Width="219"
        />

        <Image 
            HorizontalAlignment="Left" 
            Height="48" 
            Margin="51,210,0,0" 
            Source="/warning.png" 
            VerticalAlignment="Top" 
            Width="41"
        />

        <TextBox 
            x:Name="NewGameName"
            Text="GAME NAME"
            TextWrapping="NoWrap"
            TextChanged="NewGameName_TextChanged"
            VerticalContentAlignment="Center"
            HorizontalContentAlignment="Left"
            Padding="20,0,0,0"
            
            Background="pink"
            
            
            BorderThickness="2"
            HorizontalAlignment="Left"
            VerticalAlignment="Top"
            Height="63"
            Width="205"
            Margin="453,43,0,0"
           />

        <!--Image Margin="-6,-7,-6,-7" Source="/Image1.png" Stretch="Fill"/-->

    </Grid>
</Window>
